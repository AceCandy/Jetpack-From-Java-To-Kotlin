<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/room_nav_graph"
    app:startDestination="@id/roomListFragment">

    <fragment
        android:id="@+id/roomListFragment"
        android:name="com.kunminx.jetpack_java.sample_06_room.ui.RoomListFragment"
        android:label="RoomListFragment"
        tools:layout="@layout/fragment_list_navigation">

        <action
            android:id="@+id/action_roomListFragment_to_roomEditorFragment"
            app:destination="@id/roomEditorFragment"
            app:enterAnim="@anim/h_fragment_enter"
            app:exitAnim="@anim/h_fragment_exit"
            app:popEnterAnim="@anim/h_fragment_pop_enter"
            app:popExitAnim="@anim/h_fragment_pop_exit" />

        <action
            android:id="@+id/action_roomListFragment_to_navigationDetailFragment"
            app:destination="@id/navigationDetailFragment"
            app:enterAnim="@anim/h_fragment_enter"
            app:exitAnim="@anim/h_fragment_exit"
            app:popEnterAnim="@anim/h_fragment_pop_enter"
            app:popExitAnim="@anim/h_fragment_pop_exit" />

    </fragment>

    <fragment
        android:id="@+id/roomEditorFragment"
        android:name="com.kunminx.jetpack_java.sample_06_room.ui.RoomEditorFragment"
        android:label="RoomEditorFragment"
        tools:layout="@layout/fragment_editor_navigation">

        <action
            android:id="@+id/action_roomEditorFragment_to_navigationLocationFragment"
            app:destination="@id/navigationLocationFragment"
            app:enterAnim="@anim/h_fragment_enter"
            app:exitAnim="@anim/h_fragment_exit"
            app:popEnterAnim="@anim/h_fragment_pop_enter"
            app:popExitAnim="@anim/h_fragment_pop_exit" />

    </fragment>

    <fragment
        android:id="@+id/navigationDetailFragment"
        android:name="com.kunminx.jetpack_java.sample_05_navigation.ui.NavigationDetailFragment"
        android:label="NavigationDetailFragment"
        tools:layout="@layout/fragment_detail_navigation" />

    <fragment
        android:id="@+id/navigationLocationFragment"
        android:name="com.kunminx.jetpack_java.sample_05_navigation.ui.NavigationLocationFragment"
        android:label="NavigationLocationFragment"
        tools:layout="@layout/fragment_location_navigation" />

</navigation>